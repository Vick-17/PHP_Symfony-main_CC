{% extends 'base.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block body %}
<h1>Liste des réservations</h1>

<div class="mb-3 d-flex justify-content-end">
    <a href="{{ path('admin_reservation_new') }}" class="btn btn-success">Créer une réservation</a>
</div>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input type="text" name="numReservation" class="form-control" placeholder="Numéro de réservation" value="{{ numReservation }}">
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filtrer</button>
    </div>
</form>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Numéro</th>
            <th>Client</th>
            <th>Chambres</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Actions</th>
        </tr>
    </thead>
   <tbody>
    {% for reservation in reservations %}
        <tr>
            <td>{{ reservation.id }}</td>
            <td>{{ reservation.numeroReservation }}</td>
<td>
    {% if reservation.client is not null %}
        {{ reservation.client.nom }}
    {% else %}
        <em>Client supprimé</em>
    {% endif %}
</td>
            <td>
                <ul class="mb-0">
                    {% for chambre in reservation.chambres %}
                        <li>{{ chambre.numero }} ({{ chambre.type }})</li>
                    {% endfor %}
                </ul>
            </td>
            <td>{{ reservation.dateDebut|date('d/m/Y') }}</td>
            <td>{{ reservation.dateFin|date('d/m/Y') }}</td>
            <td>
                <a href="{{ path('admin_reservation_show', { id: reservation.id }) }}" class="btn btn-info btn-sm">Détail</a>
                <a href="{{ path('admin_reservation_edit', { id: reservation.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                <form method="post" action="{{ path('reservation_delete', { id: reservation.id }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                    <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">Aucune réservation trouvée.</td>
        </tr>
    {% endfor %}
</tbody>
</table>
<div class="d-flex gap-2">
    {% if currentPage > 1 %}
        <a class="btn btn-outline-primary" href="{{ path('admin_reservations', { page: currentPage - 1, numReservation: numReservation }) }}">Précédent</a>
    {% endif %}
    {% if currentPage < totalPages %}
        <a class="btn btn-outline-primary" href="{{ path('admin_reservations', { page: currentPage + 1, numReservation: numReservation }) }}">Suivant</a>
    {% endif %}
</div>
{% endblock %}
